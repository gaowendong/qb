{
  "appenders": [
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "console"
        },
        {
          "type": "file",
          "filename": "logs/http.log",
          "category": "http",
          "maxLogSize": 104857600,
          "numBackups": 4
        },
        {
          "type": "file",
          "filename": "logs/access.log",
          "maxLogSize": 104857600,
          "numBackups": 4
        },
        {
          "type": "logLevelFilter",
          "level": "ERROR",
          "appender":
          {
            "type": "file",
            "filename": "logs/errors.log"
          }
        }]
    }]
}